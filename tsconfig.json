{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "build",
        "skipLibCheck": true,
        "strict": true,
        "strictFunctionTypes": true,
        "target": "ES2022",
        "baseUrl": ".",
        "rootDir": "src"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
